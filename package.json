{
    "name": "ernesto",
    "version": "1.0.0",
    "description": "Chrome extension for article summarization",
    "type": "module",
    "scripts": {
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-puppeteer": "^11.0.0",
        "puppeteer": "^24.6.1"
    },
    "jest": {
        "preset": "jest-puppeteer",
        "testEnvironment": "jest-environment-puppeteer",
        "setupFilesAfterEnv": [
            "./jest.setup.js"
        ],
        "testMatch": [
            "<rootDir>/tests/**/*.test.js"
        ],
        "transform": {},
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        }
    }
}