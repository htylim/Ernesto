{
    "manifest_version": 3,
    "name": "Ernesto",
    "version": "1.0",
    "description": "Smart article summarization and audio playback",
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    }
}